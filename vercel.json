{
  "version": 2,
  "builds": [
      { "src": "server.js", "use": "@vercel/node" },
      { "src": "public/**", "use": "@vercel/static" }
  ],
  "rewrites": [
      { "source": "/api/(.*)", "destination": "/server.js" },
      { "source": "/(.*)", "destination": "/public/$1" }
  ],
  
  "env": { "NODE_ENV": "production" }
}