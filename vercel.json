{
  "version": 2,
  "builds": [
      { "src": "server.js", "use": "@vercel/node" },
      { "src": "public/**", "use": "@vercel/static" }
  ],
  "rewrites": [
      { "source": "/api/(.*)", "destination": "/server.js" },
      { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "headers": [
      {
          "source": "/api/(.*)",
          "headers": [
              { "key": "Access-Control-Allow-Origin", "value": "https://english-learning-website-iqbgwftoy-thuans-projects-b33864b3.vercel.app" },
              { "key": "Access-Control-Allow-Credentials", "value": "true" },
              { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" }
          ]
      }
  ],
  "env": {
      "NODE_ENV": "production",
      "BASE_URL": "https://english-learning-website-iqbgwftoy-thuans-projects-b33864b3.vercel.app"
  }
}